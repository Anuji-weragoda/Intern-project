{
  "info": {
    "name": "Leave Service API",
    "_postman_id": "leaveservice-collection",
    "description": "Collection to test Leave & Attendance microservice locally",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "sampleUserId", "value": "00000000-0000-4000-8000-000000000001" },
    { "key": "approverId", "value": "11111111-1111-4111-8111-111111111111" },
    { "key": "bearerToken", "value": "" },
    { "key": "lastRequestId", "value": "" }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Collection-level pre-request: set a simple unsigned JWT for local testing",
          "(function(){",
          "  try {",
          "    // simple base64 helper (Postman sandbox provides btoa)",
          "    var hdr = btoa(JSON.stringify({ alg: 'none', typ: 'JWT' }));",
          "    var payload = btoa(JSON.stringify({ sub: pm.variables.get('sampleUserId'), roles: ['approver'], iat: Math.floor(Date.now()/1000) }));",
          "    pm.variables.set('bearerToken', hdr + '.' + payload + '.');",
          "  } catch (e) {",
          "    // fallback: leave bearerToken unchanged",
          "  }",
          "})();"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/healthz"
      }
    },
    {
      "name": "Get Leave Balances",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/leaves?user_id={{sampleUserId}}"
      }
    },
    {
      "name": "Create Leave Request",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "  try {",
              "    var json = pm.response.json();",
              "    pm.variables.set('lastRequestId', json.id || (json.request && json.request.id) || '');",
              "  } catch (e) {}",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": \"{{sampleUserId}}\",\n  \"policy_id\": 1,\n  \"start_date\": \"2025-12-01\",\n  \"end_date\": \"2025-12-03\",\n  \"reason\": \"Postman seeded request\"\n}"
      },
      "url": "{{baseUrl}}/api/leaves"
      }
    },
    {
      "name": "List Leave Requests",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/leaves?user_id={{sampleUserId}}"
      }
    },
    {
      "name": "Approve Last Leave Request",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{bearerToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"action\": \"approve\", \"approver_id\": \"{{approverId}}\" }"
        },
        "url": "{{baseUrl}}/api/leaves/{{lastRequestId}}/approve"
      }
    },
    {
      "name": "Reject Last Leave Request",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{bearerToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"action\": \"reject\", \"approver_id\": \"{{approverId}}\", \"note\": \"Not available\" }"
        },
        "url": "{{baseUrl}}/api/leaves/{{lastRequestId}}/reject"
      }
    },
    {
      "name": "Clock In",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{ \"user_id\": \"{{sampleUserId}}\", \"method\": \"mobile\", \"geo\": { \"lat\": 6.9271, \"lon\": 79.8612 } }"
        },
        "url": "{{baseUrl}}/api/attendance/clock-in"
      }
    },
    {
      "name": "Clock Out",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{ \"user_id\": \"{{sampleUserId}}\" }"
        },
        "url": "{{baseUrl}}/api/attendance/clock-out"
      }
    },
    {
      "name": "Attendance History",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/attendance?user_id={{sampleUserId}}"
      }
    }
  ]
}
