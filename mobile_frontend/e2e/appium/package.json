{
  "name": "mobile-front-e2e-appium",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:android:win": "powershell -NoProfile -Command \"$env:CAPS='android'; npm run test\"",
    "test:ios": "powershell -NoProfile -Command \"$env:CAPS='ios'; npm run test\"",
    "test:signup:mailslurp": "wdio run wdio.conf.js --spec specs\\signup_mailslurp.e2e.js",
    "test:mailslurp:connection": "node mailslurp-example.js test-connection",
    "test:mailslurp:demo": "node mailslurp-example.js demo-extraction",
    "driver:android": "appium driver install uiautomator2",
    "driver:ios": "appium driver install xcuitest",
    "drivers:list": "appium driver list",
    "appium:start": "appium --log-level info",
    "android:auto": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-android.ps1",
    "android:remote": "powershell -NoProfile -Command \"$env:CAPS='android'; $env:APPIUM_START='false'; $env:APPIUM_HOST='127.0.0.1'; $env:APPIUM_PORT='4723'; npm run test\"",
    "android:remote:debug": "powershell -NoProfile -Command \"$env:CAPS='android'; $env:APPIUM_START='false'; $env:APPIUM_HOST='127.0.0.1'; $env:APPIUM_PORT='4723'; $env:LOG_LEVEL='debug'; npx wdio run wdio.conf.js --spec .\\specs\\login.e2e.js\"",
    "diag": "node ./scripts/diag.js"
  },
  "devDependencies": {
    "@wdio/appium-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "appium": "^3.0.0",
    "appium-uiautomator2-driver": "^6.1.0",
    "chai": "^4.0.0",
    "mailslurp-client": "^16.0.0",
    "otplib": "^12.0.1",
    "webdriverio": "^8.0.0"
  },
  "engines": {
    "node": ">=14"
  }
}
